 <div class="containr">
     <div class="row">
    {{#if offers.categoryCoupons}}
            {{#each offers.categoryCoupons}}
        <div class="col-md-12">
          <div class="card">
            <div class="main">
              <div class="co-img">
                <img src="https://cdn2.vectorstock.com/i/1000x1000/53/36/hot-offer-red-price-sticker-badge-with-flame-vector-2295336.jpg" alt="" />
              </div>
              <div class="vertical"></div>
              <div class="content">
                <h2>{{this.category}}</h2>
                <h1>{{this.percentage}}% <span>OFF</span></h1>
                <p>Valid till {{this.endDate}}</p>
              </div>
            </div>
            <div class="copy-button">
              <input id="copyvalue" type="text" readonly value="SHOP NOW" />
            <a href="/viewlistProducts"> <button onclick="copyIt()" class="copybtn">SHOP</button></a>
            </div>
          </div>
        </div>
      {{/each}}
    {{/if}}
  </div>
         <div class="row">
   {{#if offers.normalCoupons}}
