                    <td>{{this.brand}}</td>
                    <td>{{this.model}}</td>
                    <td>{{this.category}}</td>
                    <td>{{this.price}}</td>
                    <td><img style="width: 60px; height:auto" src="{{this.image.[0]}}" alt="img loading"></td>
                    <td><a href="/admin/editproduct/{{this._id}}" class="btn btn-primary">üìù</a></td>
