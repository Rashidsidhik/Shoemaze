                  <div class="col-sm-10">
                    <input type="number"  onKeyPress="if(this.value.length==2) return false;" class="form-control" value="{{coupon.percentage}}" name="percentage">
                  </div>
                 <div class="row mb-3 mt-5" id="limit">
                  <label for="inputEmail3" class="col-sm-2 col-form-label">Purchase Limit Amount</label>
                  <div class="col-sm-10">
                    <input type="text" class="form-control" value="{{coupon.limit}}" name="limit">
                  </div>
                

                <div class="text-center">
                  <button type="submit" class="btn btn-primary">Edit</button>
                </div>
              </form>
   {{/if}}
</section>
<script src="https://code.jquery.com/jquery-3.1.1.min.js"></script>
<script>
  if(coupon.type == 'category'){
    document.getElementById('name').style.display = 'none'
  }
    function codeGenerator(){
        $.ajax({
            url:'/admin/generatecode',
            method:'get',
            success:(response => {
            document.getElementById('id').value = response
            })
        })
    
    }
</script>