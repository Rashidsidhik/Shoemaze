   {{#if norm}}
   <form action="/admin/editcouponsubmit/{{coupon._id}}" method="post">
                <div class="row mb-3 mt-5" id="name">
                  <label for="inputEmail3" class="col-sm-2 col-form-label">Coupon Name</label>
                  <div class="col-sm-10">
                    <input type="text" class="form-control" value="{{coupon.name}}"  name="name">
                  </div>
                </div>
                <div class="row mb-3" id="code">
                  <label for="inputEmail3" class="col-sm-2 col-form-label">Coupon Code/ID</label>
                  <div class="col-sm-10">
                    <input type="text" class="form-control" name="code" value="{{coupon.code}}" id="id">
                    <p onclick="codeGenerator()" class="badge badge-secondary">generate Code</p>
                  </div>
                </div>
                <div class="row mb-3" id="startDate">
                  <label for="inputPassword3" class="col-sm-2 col-form-label">Start Date</label>
