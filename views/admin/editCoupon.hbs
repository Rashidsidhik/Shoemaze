<section class="page-align" id="footer">
    <h2>Edit Coupon</h2>
   {{#if product}}
   <form action="/admin/editcouponsubmit/{{coupon._id}}" method="post">
                <div class="row mb-3 mt-5" id="name">
                  <div class="col-sm-10">
                    <input type="text" class="form-control" value="{{coupon.name}}"  name="name" hidden>
                  </div>
                </div>
                <div class="row mb-3" id="code">
                  <div class="col-sm-10">
                    <input type="text" class="form-control" name="code" value="{{coupon.code}}" id="id" hidden>
                  </div>
                </div>
                <div class="row mb-3" id="startDate">
                  <div class="col-sm-10">
                    <input type="date" class="form-control" name="startDate" value="{{coupon.startDate}}" hidden>
                  </div>
                </div>
                 <div class="row mb-3">
                  <label for="inputPassword3" class="col-sm-2 col-form-label">End Date</label>
                  <div class="col-sm-10">
                    <input type="date" class="form-control" name="endDate" value="{{coupon.endDate}}">
                  </div>
                </div>
                <div class="row mb-3 mt-5">
                  <label for="inputEmail3" class="col-sm-2 col-form-label">Percentage</label>
                  <div class="col-sm-10">
                    <input type="number"  onKeyPress="if(this.value.length==2) return false;" class="form-control" value="{{coupon.percentage}}" name="percentage">
                  </div>
                 <div class="row mb-3 mt-5" id="limit">
                  <div class="col-sm-10">
                    <input type="text" class="form-control" value="{{coupon.limit}}" name="limit" hidden>
                  </div>
                

                <div class="text-center">
                  <button type="submit" class="btn btn-primary">Edit</button>
                </div>
              </form>
   {{/if}}
   {{#if catego}}
