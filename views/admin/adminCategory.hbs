<section id="footer" class="category">
<div class="page-align">
    <form action="/admin/addedCategory" method="post">
        <div class="row mb-3">
            <label for="inputEmail" class="col-sm-2 col-form-label">Category</label>
            <div class="col-sm-5">
                <input type="text" name="name" class="form-control"  required pattern="[A-Za-z]{3}[A-Za-z ]+">

            </div>
            <div class="col-sm-5">
                <button class="btn btn-secondary" type="submit">Add</button><br>
                
                <a class="return-add-category" href=""></a>
            

            </div>
        </div>
        <p class="error"></p>
    </form>
    <table class="table table-bordered">
        <thead>
            <tr>
                <th scope="col">Categories</th>
                <th scope="col">Action</th>
            </tr>
        </thead>
        <tbody>
            {{#each getcategory}}
            <tr>
                <td>{{this.name}}</td> 
                <td>
                    <a href="/admin/editCategory/{{this._id}}"><button class="btn btn-secondary" id="my-button" onclick="myFunction(this.id)">Edit</button></a>
                    <a onclick="return categoryDelete('{{this._id}}')" ><button class="btn btn-secondary" >Remove</button></a>
     </td>
</tr>
            {{/each}}

        </tbody>
    </table>
</div>
</section>
